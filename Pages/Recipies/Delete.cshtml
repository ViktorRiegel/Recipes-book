@page
@model RecipesBook.Pages.Recipies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/card.css" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvHh+9t2ta5u6D5j" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<a style="position:absolute; margin-top:8px" asp-page="Index"><img src="~/assets/arrowWhite24.png"></a>
<div style="text-align:center">
    <h1>Are you sure you want to delete this recipe?</h1>
</div>

<div>
    <hr />
    <div id="card" class="card" style="position: relative;">
        <form method="post" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
            <img src=@Html.DisplayFor(model => model.RecipeBook.Images) class="card-img-top" alt="...">
            <input type="image" src="~/assets/delete.png" style="height:36px; width:36px; position: absolute; top:1%; left:92%; border:2px black; border-radius: 12px; background-color:rgb(203 213 225)" asp-for="RecipeBook.Id" value="Delete" class="btn" />
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.RecipeBook.Title)</h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.CreatedDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.CreatedDate)
                        </dd>
                    </dl>
                </li>
                <li class="list-group-item">
                    <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.Category)
                        </dd>
                    </dl>
                </li>
                <li class="list-group-item">
                    <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.Complexity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.Complexity)
                        </dd>
                    </dl>
                </li>
                <li class="list-group-item">
                    <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.PreparationTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.PreparationTime) Min
                            <img src="~/assets/timer24.png" />
                        </dd>
                    </dl>
                     <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.Ingredients)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.Ingredients)
                        </dd>
                    </dl>
                     <dl>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.RecipeBook.Steps)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RecipeBook.Steps)
                        </dd>
                    </dl>
                </li>
            </ul>
        </form>
    </div>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
